@model IEnumerable<Workforce.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cohort)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => student.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => student.Cohort.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@student.Id">Details</a> |
                <a asp-action="DeleteConfirm" asp-route-id="@student.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
